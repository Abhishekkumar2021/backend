# Application Configuration
APP_NAME="Data Agent - Universal ETL"
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_V1_PREFIX=/api/v1

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/data_agent

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
# WARNING: Keep this secret! Required for encryption/decryption operations
MASTER_PASSWORD=your_super_secure_master_password_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=INFO
JSON_LOGS=false
LOG_DIR=logs

# Celery Configuration (Optional - defaults to REDIS_URL)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Flags
ENABLE_CACHE=true
ENABLE_SCHEDULER=true